<div class="container">
    <h1><a href="/">NHL Scraper</a>
        <a href="/scrape"><button class="btn">Scrape</button></a>
        <a href="/articles"><button class="btn">View Articles JSON</button></a>
    </h1>
    
    <div class="row">
        <div class="col s12 m12">
            <div class="card blue-grey darken-1">

                <div class="card-content white-text">
                    <span class="card-title">{{articles.title}}</span>
                    <p>{{articles.subtitle}}</p>
                </div>
                
                <div class="card-content grey lighten-4">
                    {{#each articles.comments}}
                    <div class="row">
                        <div class="col s4">{{this.created}}</div>
                        <div class="col s8">{{this.body}}</div>
                    </div>
                    {{/each}}
                </div>

                <div class="card-action">
                    <a href="{{articles.link}}">Go to Page!</a>
                    <div class="row">
                        <form method="POST" action="/articles/{{articles._id}}">
                            <div class="input-field col s10">
                                <input name="comment" id="comment" type="text" pattern=".{2,100}">
                                <label for="comment" data-error="* Length should be between 2-100 characters">Comment</label>
                            </div>
                            <div class="input-field col s2">
                                <button class="btn" type="submit" name="action">Add Comment</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>