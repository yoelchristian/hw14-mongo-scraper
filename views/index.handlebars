<div class="container">
    <h1><a href="/">NHL Scraper</a>
        <a href="/scrape"><button class="btn">Scrape</button></a>
        <a href="/articles"><button class="btn">View Articles JSON</button></a>
    </h1>
    
    <div class="row">
        {{#each articles}}
        <div class="col s12 m12">
            <div class="card blue-grey darken-1">

                <div class="card-content white-text">
                    <span class="card-title">{{this.title}}</span>
                    <p>{{this.subtitle}}</p>
                </div>
                
                <div class="card-reveal grey lighten-4">
                    <span class="card-title grey-text text-darken-4">Comments: <i class="material-icons right">close</i></span>
                    {{#each this.comments}}
                    <div class="row">
                        <div class="col s4">{{this.created}}</div>
                        <div class="col s8">{{this.body}}</div>
                    </div>
                    {{/each}}
                </div>

                <div class="card-action">
                    <a href="{{this.link}}">Go to Page!</a>
                    <a href="#" class="activator">View Comments</a>
                    <a href="/articles/{{this._id}}">Add Comments</a>
                </div>
            </div>
        </div>
        {{/each}}
        
    </div>
</div>